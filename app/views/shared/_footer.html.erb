<footer class="rodape">
  <div class="rodape__container">
    <div class="rodape__info">
      <div class="rodape__logo">
        <i class="bi bi-film"></i>
        <span>Catálogo de Filmes</span>
      </div>
      <p class="rodape__texto">
        Seu catálogo pessoal de filmes
      </p>
    </div>

    <div class="rodape__links">
      <div class="rodape__coluna">
        <h4>Navegação</h4>
        <ul>
          <li><%= link_to "Filmes", filmes_path %></li>
          <li><%= link_to "Categorias", categorias_path %></li>
        </ul>
      </div>

      <div class="rodape__coluna">
        <h4>Conta</h4>
        <ul>
          <% if usuario_signed_in? %>
            <li><%= link_to "Perfil", edit_usuario_registration_path %></li>
            <li><%= link_to "Sair", destroy_usuario_session_path, data: { turbo_method: :delete } %></li>
          <% else %>
            <li><%= link_to "Entrar", new_usuario_session_path %></li>
            <li><%= link_to "Registrar", new_usuario_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="rodape__copy">
    <p><%= Time.current.year %> Desenvolvido por Eloá Mello.</p>
  </div>
</footer>