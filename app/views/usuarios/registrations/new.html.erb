<% content_for :title, t('.title') %>

<div class="pagina-autenticacao">
  <div class="formulario-auth">
    <div class="formulario-auth__cabecalho">
      <i class="bi bi-person-plus"></i>
      <h1><%= t('.heading') %></h1>
      <p><%= t('.description') %></p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "usuarios/shared/error_messages", resource: resource %>

      <div class="formulario-auth__grupo">
        <%= f.label :nome, t('.nome_label'), class: "formulario-auth__label" %>
        <%= f.text_field :nome,
                         autofocus: true,
                         autocomplete: "name",
                         class: "formulario-auth__input",
                         placeholder: t('.nome_placeholder') %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :email, t('.email_label'), class: "formulario-auth__label" %>
        <%= f.email_field :email,
                          autocomplete: "email",
                          class: "formulario-auth__input",
                          placeholder: t('.email_placeholder') %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password, t('.password'), class: "formulario-auth__label" %>
        <% if @minimum_password_length %>
          <small class="text-muted">
            (<%= @minimum_password_length %> <%= t('usuarios.minimum_characters') %>)
          </small>
        <% end %>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password_confirmation, t('.password_confirmation'), class: "formulario-auth__label" %>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <%= f.submit t('.submit'), class: "botao botao--primario botao--completo botao--grande" %>
    <% end %>

    <div class="formulario-auth__rodape">
      <p>
        <%= t('.already_have_account') %>
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "formulario-auth__link" %>
      </p>
    </div>
  </div>
</div>