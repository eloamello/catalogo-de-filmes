<% content_for :title, "Registrar" %>

<div class="pagina-autenticacao">
  <div class="formulario-auth">
    <div class="formulario-auth__cabecalho">
      <i class="bi bi-person-plus"></i>
      <h1>Crie sua conta</h1>
      <p>Preencha seus dados para começar</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "usuarios/shared/error_messages", resource: resource %>

      <div class="formulario-auth__grupo">
        <%= f.label :nome, "Nome", class: "formulario-auth__label" %>
        <%= f.text_field :nome,
                         autofocus: true,
                         autocomplete: "name",
                         class: "formulario-auth__input",
                         placeholder: "Seu nome" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :email, "E-mail", class: "formulario-auth__label" %>
        <%= f.email_field :email,
                          autocomplete: "email",
                          class: "formulario-auth__input",
                          placeholder: "seu@email.com" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password, "Senha", class: "formulario-auth__label" %>
        <% if @minimum_password_length %>
          <small class="text-muted">
            (<%= @minimum_password_length %> caracteres no mínimo)
          </small>
        <% end %>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password_confirmation, "Confirmar senha", class: "formulario-auth__label" %>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <%= f.submit "Criar conta", class: "botao botao--primario botao--completo botao--grande" %>
    <% end %>

    <div class="formulario-auth__rodape">
      <p>
        Já tem uma conta?
        <%= link_to "Entrar", new_session_path(resource_name), class: "formulario-auth__link" %>
      </p>
    </div>
  </div>
</div>