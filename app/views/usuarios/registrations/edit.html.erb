<% content_for :title, "Editar perfil" %>

<div class="pagina-autenticacao">
  <div class="formulario-auth">
    <div class="formulario-auth__cabecalho">
      <i class="bi bi-person-circle"></i>
      <h1>Editar perfil</h1>
      <p>Atualize seus dados abaixo</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "usuarios/shared/error_messages", resource: resource %>

      <div class="formulario-auth__grupo">
        <%= f.label :nome, "Nome", class: "formulario-auth__label" %>
        <%= f.text_field :nome,
                         autofocus: true,
                         autocomplete: "name",
                         class: "formulario-auth__input",
                         placeholder: "Seu nome completo" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :email, "E-mail", class: "formulario-auth__label" %>
        <%= f.email_field :email,
                          autocomplete: "email",
                          class: "formulario-auth__input",
                          placeholder: "seu@email.com" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="formulario-auth__grupo">
          <small class="text-muted">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </small>
        </div>
      <% end %>

      <div class="formulario-auth__grupo">
        <%= f.label :password, "Nova senha", class: "formulario-auth__label" %>
        <small class="text-muted">(deixe em branco se não quiser alterar)</small>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <br />
          <small class="text-muted">
            (<%= @minimum_password_length %> caracteres no mínimo)
          </small>
        <% end %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password_confirmation, "Confirmar nova senha", class: "formulario-auth__label" %>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :current_password, "Senha atual", class: "formulario-auth__label" %>
        <small class="text-muted">(necessária para confirmar alterações)</small>
        <%= f.password_field :current_password,
                             autocomplete: "current-password",
                             class: "formulario-auth__input",
                             placeholder: "••••••••" %>
      </div>

      <%= f.submit "Atualizar", class: "botao botao--primario botao--completo botao--grande" %>
    <% end %>

    <div class="formulario-auth__rodape">
      <%= link_to "Voltar", :back, class: "formulario-auth__link" %>
    </div>
  </div>
</div>