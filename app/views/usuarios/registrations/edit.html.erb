<% content_for :title, t('.title') %>

<div class="pagina-autenticacao">
  <div class="formulario-auth">
    <div class="formulario-auth__cabecalho">
      <i class="bi bi-person-circle"></i>
      <h1><%= t('.heading') %></h1>
      <p><%= t('.description') %></p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "usuarios/shared/error_messages", resource: resource %>

      <div class="formulario-auth__grupo">
        <%= f.label :nome, t('.nome_label'), class: "formulario-auth__label" %>
        <%= f.text_field :nome, autofocus: true, autocomplete: "name", class: "formulario-auth__input", placeholder: t('.nome_placeholder') %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :email, t('.email_label'), class: "formulario-auth__label" %>
        <%= f.email_field :email, autocomplete: "email", class: "formulario-auth__input", placeholder: t('.email_placeholder') %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="formulario-auth__grupo">
          <small class="text-muted">
            <%= t('.waiting_confirmation', email: resource.unconfirmed_email) %>
          </small>
        </div>
      <% end %>

      <div class="formulario-auth__grupo">
        <%= f.label :password, t('.new_password'), class: "formulario-auth__label" %>
        <small class="text-muted"><%= t('.new_password_hint') %></small>
        <%= f.password_field :password, autocomplete: "new-password", class: "formulario-auth__input", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <br />
          <small class="text-muted">
            (<%= @minimum_password_length %> <%= t('usuarios.minimum_characters') %>)
          </small>
        <% end %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :password_confirmation, t('.confirm_password'), class: "formulario-auth__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "formulario-auth__input", placeholder: "••••••••" %>
      </div>

      <div class="formulario-auth__grupo">
        <%= f.label :current_password, t('.current_password'), class: "formulario-auth__label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "formulario-auth__input", placeholder: "••••••••" %>
      </div>

      <%= f.submit t('.submit'), class: "botao botao--primario botao--completo botao--grande" %>
    <% end %>

    <div class="formulario-auth__rodape">
      <%= link_to t('.back'), :back, class: "formulario-auth__link" %>
    </div>
  </div>
</div>