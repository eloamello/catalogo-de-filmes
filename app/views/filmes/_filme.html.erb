<div class="col d-flex align-items-stretch">
  <div class="card w-100 h-100 d-flex flex-column" style="max-width: 320px; margin: auto;">
    <% if filme.poster.attached? %>
      <%= image_tag filme.poster, class: "card-img-top", alt: filme.titulo %>
    <% else %>
      <%= image_tag "https://placehold.co/300x400", class: "card-img-top", alt: filme.titulo %>
    <% end %>

    <div class="card-body d-flex flex-column">
      <h5 class="card-title mb-2"><%= filme.titulo %></h5>
      <p class="card-text"><%= filme.ano %></p>
      <p class="card-text">Direção: <%= filme.diretor %></p>

      <div class="mt-auto d-flex gap-2">
        <%= link_to "Ver filme", filme_path(filme), class: "btn btn-primary flex-fill" %>
        <% if usuario_signed_in? && filme.usuario == current_usuario %>
          <%= link_to "Editar filme", edit_filme_path(filme), class: "btn btn-secondary flex-fill" %>
        <% end %>
      </div>
    </div>
  </div>
</div>