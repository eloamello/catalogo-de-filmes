<% content_for :title, "Categorias" %>

<h1>Categorias</h1>

<div class="mb-3 d-flex gap-2">
  <%= link_to "Nova Categoria", new_categoria_path, class: "botao botao--sucesso" %>
  <%= link_to "Voltar para Filmes", filmes_path, class: "botao botao--secundario" %>
</div>

<div class="tabela--resposive">
  <table class="tabela">
    <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.nome %></td>
        <td class="tabela__acoes">
          <%= link_to "Editar", edit_categoria_path(categoria), class: "botao botao--secundario botao--pequeno" %>
          <%= button_to "Excluir", categoria_path(categoria), method: :delete, data: { confirm: "Tem certeza?" }, class: "botao botao--perigo botao--pequeno" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>