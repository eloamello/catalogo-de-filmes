<% content_for :title, "Categorias" %>
<h1>Categorias</h1>

<div class="mb-3 d-flex gap-2">
  <%= link_to "Nova Categoria", new_categoria_path, class: "btn btn-success" %>
  <%= link_to "Voltar para Filmes", filmes_path, class: "btn btn-secondary" %>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @categorias.each do |categoria| %>
    <tr>
      <td><%= categoria.nome %></td>
      <td>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>