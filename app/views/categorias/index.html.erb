<% content_for :title, t(".title") %>

<div class="mb-3 d-flex gap-2">
  <%= link_to t("categorias.new.title"), new_categoria_path, class: "botao botao--sucesso" %>
  <%= link_to t("back"), filmes_path, class: "botao botao--secundario" %>
</div>

<div class="tabela--resposive">
  <table class="tabela">
    <thead>
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.nome %></td>
        <td class="tabela__acoes">
          <%= link_to t("edit"), edit_categoria_path(categoria), class: "botao botao--secundario botao--pequeno" %>
          <%= button_to t("delete"), categoria_path(categoria), method: :delete, data: { confirm: t("sure") }, class: "botao botao--perigo botao--pequeno" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>