<% content_for :title, "Importações" %>

<h1>Importações de Filmes</h1>

<table class="table table-striped table-hover mt-3">
  <thead>
  <tr>
    <th>ID</th>
    <th>Criada em</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @importacoes.each do |importacao| %>
    <tr>
      <td><%= importacao.id %></td>
      <td><%= importacao.created_at.strftime("%d/%m/%Y %H:%M") %></td>
      <td>
        <% case importacao.status %>
        <% when "em_andamento" %>
          <span class="badge bg-warning text-dark">Em andamento</span>
        <% when "concluido" %>
          <span class="badge bg-success">Concluído</span>
        <% when "erro" %>
          <span class="badge bg-danger">Erro</span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>